  {
    "name": "Collection Icon Details",
    "settings": [
      {
            "type": "range",
            "label": "Number 1",
            "id": "number_1",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 1
        },
      {
            "type": "range",
            "label": "Number 2",
            "id": "number_2",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 2
        },
      {
            "type": "range",
            "label": "Number 3",
            "id": "number_3",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 3
        },
      {
            "type": "range",
            "label": "Number 4",
            "id": "number_4",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 4
        }
    ],
    "presets": [
      {
        "name": "Icon Text and Title",
        "category": "Collectionpage"
      }
    ]
  }
