
{% style %}
  
   {% if section.settings.bg_color != blank %}#shopify-section-{{- section.id }} .il-jump-navigation{background-color:{{ section.settings.bg_color }};} {% endif %}
  {% if section.settings.text_color != blank %}#shopify-section-{{- section.id }} .il-jump-navigation h6{color:{{ section.settings.text_color }};} {% endif %}
{% endstyle %}


<div class="il-jump-navigation">
   <div class="t4s-container">
      <div class="il-jump-navigation-wrapper t4s-row t4s-align-items-center t4s-justify-content-center">
         {% if section.settings.Title_text != blank %}
         <h6 class="il-jump-title">{{ section.settings.Title_text }}</h6>
         {% endif %}
         <div class="il-jump-navigation-inner t4s-row t4s-align-items-center">
            {% for block in section.blocks %}
            <div class="il-jump-navigation-item">
               {% if block.settings.jump_img != blank %}
               <div class="il-jump-img">
                  <img src="{{ block.settings.jump_img | img_url : pico }}">
               </div>
               {% else %}
               <div class="il-jump-img">
                  <img src="https://cdn.shopify.com/s/files/1/0612/5142/0296/files/down-arrow.svg?v=1706157742">
               </div>
               {% endif %}
               {% if block.settings.jump_title != blank %}
              <a href="{{ block.settings.jump_url }}" class="jump-url"> <h6 class="jump-sub-title">{{ block.settings.jump_title }}</h6></a>
               {% endif %}
            </div>
            {% endfor %}
         </div>
      </div>
   </div>
</div>


{% schema %}
  {
    "name": "IL-jump Navigation",
    "class":"IL-jump-sticky",
    "settings": [
      {
        "type":"color",
        "id":"bg_color",
        "label":"background Color"
      },
      {
        "type":"color",
        "id":"text_color",
        "label":"Text Color"
      },      
      {
        "type":"text",
        "id":"Title_text",
        "label":"Title Text",
        "default": "Jump down to:"
      }  
    ],
      "max_blocks":5,
      "blocks": [
        {
          "type": "jump-navigation",
          "name": "jump Navigation",
          "settings": [
            {
              "type": "image_picker",
              "id": "jump_img",
              "label": "Image"
            },           
            {
              "type": "text",
              "id": "jump_title",
              "label": "Title"
            },
            {
              "type": "url",
              "id": "jump_url",
              "label": "Url"
            }            
          ]
        }
      ],    
    "presets": [
      {
        "name": "IL-jump Navigation"
      }
    ]    
  }
{% endschema %}